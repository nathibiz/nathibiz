{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/sw.js",
                "destination": "/sw.js"
            },
            {
                "source": "/manifest.json",
                "destination": "/manifest.json"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}